# Environment Variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/volunteer-db
# Hoặc sử dụng MongoDB Atlas (miễn phí):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/volunteer-db

# Cloudinary Configuration (Tạo tài khoản miễn phí tại https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT (nếu cần authentication sau này)
JWT_SECRET=your_jwt_secret_key_here

# Upload limits
MAX_FILE_SIZE=10485760
MAX_FILES=10
